<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu_posts_btn" style="@style/MenuDrawer.Button"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView android:id="@+id/menu_row_icon"
		android:layout_width="@dimen/menu_image_size" android:layout_height="@dimen/menu_image_size"
		style="@style/MenuDrawer.Button.Image" android:clickable="false"
		android:contentDescription="@string/posts" android:scaleType="centerInside"
		android:src="@drawable/ic_md_post" android:tint="@color/md__iconTintColor" />

	<TextView android:id="@+id/menu_row_title" style="@style/MenuDrawer.Button.Text"
		android:layout_width="0dp" android:layout_height="wrap_content"
		android:paddingLeft="8dp" android:clickable="false" android:text="@string/posts"
		android:maxLines="1" android:ellipsize="end" android:layout_weight="1" />

	<ImageView android:id="@+id/new_post" android:layout_width="@dimen/menu_image_size"
		android:layout_height="@dimen/menu_image_size" android:clickable="true"
		android:contentDescription="@string/posts" android:scaleType="centerInside"
		android:src="@drawable/ic_md_add" android:background="@drawable/selectable_background_wordpress" />

</LinearLayout>