<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_window_focused="false">
		<layer-list>
			<item>
				<shape>
					<solid android:color="#585454" />
				</shape>
			</item>
			<item android:bottom="2dp">
				<shape>
					<solid android:color="#736D6D" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape>
					<solid android:color="#c13665" />
				</shape>
			</item>
			<item android:top="2dp">
				<shape>
					<solid android:color="@color/default_pressed" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_focused="true">
		<layer-list>
			<item>
				<shape>
					<solid android:color="#1c3665" />
				</shape>
			</item>
			<item android:top="2dp">
				<shape>
					<solid android:color="@color/default_pressed" />
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
